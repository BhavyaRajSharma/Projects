<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vivek.miniproject.AboutUsActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/about_us_image"
            android:layout_width="240px"
            android:layout_height="240px"
            android:src="@mipmap/project_icon"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/about_us_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="48dp"
            android:text="Connect 1.0"
            android:textColor="@android:color/holo_purple"
            />

        <TextView
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:id="@+id/about_us_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24dp"
            android:text="@string/about_us_details"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
